{
    "name": "opsway/doctrine-orm-swoole",
    "description": "Doctrine EntityManager Decorator for Swoole &amp; coroutine (concurrency requests) support",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandr Vronskiy",
            "email": "alvro@opsway.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "doctrine/dbal": "^3.2",
        "doctrine/orm": "^2.12",
        "psr/container": "^1.0 || ^2.0"
    },
    "require-dev": {
        "opsway/psr12-strict-coding-standard": "^0.7.0",
        "lctrs/psalm-psr-container-plugin": "^1.6",
        "vimeo/psalm": "^4.22",
        "weirdan/doctrine-psalm-plugin": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "OpsWay\\Doctrine\\ORM\\Swoole\\": "src/"
        }
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    }
}
